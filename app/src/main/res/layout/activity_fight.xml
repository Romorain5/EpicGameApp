<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FightActivity"
    android:orientation="vertical">


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"
    android:id="@+id/linear_layout_fight_p1">

        <TextView
        android:id="@+id/HP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP Player 1 : " />

         <TextView
         android:id="@+id/figth_activity_p1_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 HP not defined :/ "
        android:layout_below="@+id/HP1"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="30dp"
    android:id="@+id/linear_layout_fight_p2">


         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP Player 2" />
        <TextView
            android:id="@+id/figth_activity_p2_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 HP not defined :/"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_layout_fight_p1"
        android:layout_width="match_parent"
        android:layout_marginTop="175dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_control_p1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1, it's your turn ! "/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic attack"
            android:onClick="P1_basic_attack_to_P2"
            android:id="@+id/fight_basic_attack_p1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special attack"
            android:onClick="P1_special_attack_to_P2"
            android:id="@+id/fight_special_attack_p1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_layout_fight_p2"
        android:layout_width="match_parent"
        android:layout_marginTop="175dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/linear_layout_control_p2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2, it's your turn ! "/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic attack"
            android:onClick="P2_basic_attack_to_P1"
            android:id="@+id/fight_basic_attack_p2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special attack"
            android:onClick="P2_special_attack_to_P1"
            android:id="@+id/fight_special_attack_p2"/>

    </LinearLayout>



</RelativeLayout>