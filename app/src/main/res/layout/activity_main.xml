<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.MainActivity"
    android:id="@+id/root">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <VideoView

        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        />
    </RelativeLayout>
    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:textColor="@android:color/white"
        android:padding="30dp"
        android:textSize="30dp"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
       />





    <Button
        android:layout_below="@id/Welcome"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/activity_main_create_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoPlayer1Creation"
        android:padding="20dp"
        android:text="Créer le joueur 1"
        android:textSize="18dp"
        android:background="@drawable/button_style"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/nunito_semibold"
        />


    <Button
        android:id="@+id/activity_main_create_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_create_player1"
        android:layout_marginTop="20dp"
        android:onClick="gotoPlayer2Creation"
        android:padding="20dp"
        android:text="Créer le joueur 2"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:fontFamily="@font/nunito_semibold"
        />

    <Button
        android:id="@+id/activity_main_fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_create_player2"
        android:layout_marginTop="20dp"
        android:onClick="startFight"
        android:padding="20dp"
        android:text="Commencer la partie"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        />



</RelativeLayout>