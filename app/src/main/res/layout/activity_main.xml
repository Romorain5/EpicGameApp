<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:padding="30dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
       />

    <EditText
        android:id="@+id/input_player1_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome"
        android:padding="15dp"
        android:hint="Nom du joueur 1 : "
        />

    <RadioGroup
        android:id="@+id/class_choice_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_player1_name"
        android:orientation="horizontal"
        android:checkedButton="@id/class_choice_warrior">

        <RadioButton
            android:id="@+id/class_choice_warrior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guerrier"
            android:onClick="checkButton"/>

        <RadioButton
            android:id="@+id/class_choice_wizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mage"
            android:onClick="checkButton"/>
        <RadioButton
            android:id="@+id/class_choice_marksman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rôdeur"
            android:onClick="checkButton"/>

    </RadioGroup>

    <EditText
        android:id="@+id/level_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Niveau du personnage"
        android:layout_below="@id/class_choice_group"/>

    <LinearLayout
        android:id="@+id/linear_layout_stats1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_input"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/strength_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Force"/>

        <EditText

            android:id="@+id/intel_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Intelligence"/>
        <EditText
            android:id="@+id/agility_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Agilité"/>
        <EditText
            android:id="@+id/chance_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Chance"/>

        <Button
            android:id="@+id/ok_test_stats_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"/>






    </LinearLayout>


    <EditText
        android:id="@+id/input_player2_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_stats1"
        android:padding="15dp"
        android:hint="Nom du joueur 2"
        />

    <RadioGroup
        android:id="@+id/class_choice_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_player2_name"
        android:orientation="horizontal"
        android:checkedButton="@id/class_choice_warrior2">

        <RadioButton
            android:id="@+id/class_choice_warrior2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guerrier"
            android:onClick="checkButton2"/>

        <RadioButton
            android:id="@+id/class_choice_wizard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mage"
            android:onClick="checkButton2"/>
        <RadioButton
            android:id="@+id/class_choice_marksman2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rôdeur"
            android:onClick="checkButton2"/>

    </RadioGroup>

    <EditText
        android:id="@+id/level_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Niveau du personnage"
        android:layout_below="@id/class_choice_group2"/>

    <LinearLayout
        android:id="@+id/linear_layout_stats2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_input2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/strength_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Force"/>

        <EditText
            android:id="@+id/intel_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Intelligence"/>
        <EditText
            android:id="@+id/agility_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Agilité"/>
        <EditText
            android:id="@+id/chance_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Chance"/>

        <Button
            android:id="@+id/ok_test_stats_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"/>






    </LinearLayout>


    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_stats2"
        android:text="Suivant"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>