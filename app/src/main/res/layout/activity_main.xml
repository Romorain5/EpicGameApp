<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:padding="30dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
       />


    <Button
        android:id="@+id/activity_main_create_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome"
        android:layout_marginTop="20dp"
        android:onClick="gotoPlayer1Creation"
        android:padding="20dp"
        android:text="Créer le joueur 1"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/activity_main_create_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_create_player1"
        android:layout_marginTop="20dp"
        android:onClick="gotoPlayer2Creation"
        android:padding="20dp"
        android:text="Créer le joueur 2"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/activity_main_fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_create_player2"
        android:layout_marginTop="20dp"
        android:onClick="startFight"
        android:padding="20dp"
        android:text="Commencer la partie"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>